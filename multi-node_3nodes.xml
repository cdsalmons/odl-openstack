<vnx xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="/usr/share/xml/vnx/vnx-2.00.xsd">
  <global>
    <version>2.0</version>
    <scenario_name>multi-node_3nodes</scenario_name>
    <automac/>
    <vm_mgmt type="none" />
    <vm_defaults>
        <console id="0" display="no"/>
        <console id="1" display="yes"/>
    </vm_defaults>
    <cmd-seq seq='start-neutron'>conf-neutron,stack,start-odl</cmd-seq>
    <cmd-seq seq='start-odl-l2'>conf-odl-l2,stack,start-odl</cmd-seq>
    <cmd-seq seq='start-odl-l3'>conf-odl-l3,stack,start-odl</cmd-seq>
    <cmd-seq seq='stop'>unstack,stop-odl</cmd-seq>
  </global>


  <!-- NET DEFINITION -->
  <!-- virbr0 (192.168.122/24) -->
  <net name="virbr0" mode="virtual_bridge" managed="no"/>
  <!-- internalNet (10.0.0.0/24) -->
  <net name="internalNet" mode="virtual_bridge" />


  <!-- OPENDAYLIGHT NODE -->
  <vm name="odl" type="libvirt" subtype="kvm" os="linux" exec_mode="sdisk" arch="x86_64" vcpu="8">
    <filesystem type="cow">filesystems/devstack_odl_ovs_KILO.qcow2</filesystem>
    <mem>4G</mem>
    <if id="1" net="virbr0"/>
    <if id="2" net="internalNet">
      <ipv4>10.0.0.10/24</ipv4>
    </if>

    <!-- DHCP configuration for eth1 -->
    <exec seq="on_boot" type="verbatim" ostype="system">
         sleep 10;
         sed -i '$a interface "eth1" {' /etc/dhcp/dhclient.conf;
         sed -i '$a send dhcp-requested-address 192.168.122.10;}' /etc/dhcp/dhclient.conf;
         dhclient eth1;
         chmod 644 /etc/resolv.conf;
    </exec>

    <!-- Start OpenDaylight -->
    <exec seq="start-odl" type="verbatim" ostype="system">
    	 /home/vnx/opendaylight/distribution-karaf-0.2.4-SNAPSHOT/bin/start;
    </exec>

    <!-- Stop OpenDaylight -->
    <exec seq="stop-odl" type="verbatim" ostype="system">
    	 /home/vnx/opendaylight/distribution-karaf-0.2.4-SNAPSHOT/bin/stop;
    </exec>
  </vm>


  <!-- CONTROLLER NODE (Controller + Network + Compute1) -->
  <vm name="ctrl-comp1" type="libvirt" subtype="kvm" os="linux" exec_mode="sdisk" arch="x86_64" vcpu="8">
    <filesystem type="cow">filesystems/devstack_odl_ovs_KILO.qcow2</filesystem>
    <mem>4G</mem>
    <if id="1" net="virbr0"/>
    <if id="2" net="internalNet">
      <ipv4>10.0.0.11/24</ipv4>
    </if>

    <!-- Copy DevStack configuration (Neutron only)-->
    <filetree seq="conf-neutron" root="/home/vnx/devstack/local.conf" perms="644">conf/neutron-only/local.conf.ctrl-comp1</filetree>

    <!-- Copy DevStack configuration (Neutron with ODL [L2])-->
    <filetree seq="conf-odl-l2" root="/home/vnx/devstack/local.conf" perms="644">conf/neutron-odl-l2/local.conf.ctrl-comp1</filetree>

    <!-- Copy DevStack configuration (Neutron with ODL [L2 & L3])-->
    <filetree seq="conf-odl-l3" root="/home/vnx/devstack/local.conf" perms="644">conf/neutron-odl-l3/local.conf.ctrl-comp1</filetree>

    <!-- DHCP configuration for eth1 -->
    <exec seq="on_boot" type="verbatim" ostype="system">
    	 sleep 10;
	 sed -i '$a interface "eth1" {' /etc/dhcp/dhclient.conf;
	 sed -i '$a send dhcp-requested-address 192.168.122.11;}' /etc/dhcp/dhclient.conf;
	 dhclient eth1;
	 chmod 644 /etc/resolv.conf;
    </exec>

    <!-- Start DevStack -->
    <exec seq="stack" type="verbatim" ostype="system">
    	 su vnx -c "/home/vnx/devstack/stack.sh > /dev/ttyS0";
    </exec>

    <!-- Stop DevStack -->
    <exec seq="unstack" type="verbatim" ostype="system">
    	 su vnx -c "/home/vnx/devstack/stack.sh > /dev/ttyS0";
    </exec>
  </vm>


  <!-- COMPUTE NODE (Compute2)-->
  <vm name="comp2" type="libvirt" subtype="kvm" os="linux" exec_mode="sdisk" arch="x86_64" vcpu="8">
    <filesystem type="cow">filesystems/devstack_odl_ovs_KILO.qcow2</filesystem>
    <mem>4G</mem>
    <if id="1" net="virbr0"/>
    <if id="2" net="internalNet">
      <ipv4>10.0.0.12/24</ipv4>
    </if>

    <!-- DHCP configuration for eth1 -->
    <exec seq="on_boot" type="verbatim" ostype="system">
         sleep 10;
         sed -i '$a interface "eth1" {' /etc/dhcp/dhclient.conf;
         sed -i '$a send dhcp-requested-address 192.168.122.12;}' /etc/dhcp/dhclient.conf;
         dhclient eth1;
         chmod 644 /etc/resolv.conf;
    </exec>
  </vm>

</vnx>
